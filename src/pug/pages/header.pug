- var images = "../src/assets/images/"
section.header
    .container
        header.header__top
            .header__logo
                img.header__logo-img.img(src=images + "logo.svg" alt="Triphouse logo")
            ul.header__menu-list
                li.header__menu-item.header__menu-item--active
                    a.header__menu-link(href="#") Stays
                li.header__menu-item.header__menu-item--active
                    a.header__menu-link(href="#") Attractions
                li.header__menu-item
                    button.header__ico-theme
                li.header__menu-item
                    button.header__ico-account
                li.header__menu-item
                    .burger
                        .burger__line
                        .burger__line
                        .burger__line
        h2.header__title Discover stays<br>to live, work or just relax
        //- For PC
        form.header__form(action="/" method="get")
          .header__form-wrap.header__form-wrap--city
            label.header__form-label.header__form-label-dest Your destination or hotel name
            input.header__form-input.header__form-input--city(type="text" placeholder="New York" name="city")
          .header__form-wrap.header__form-wrap--date
            label.header__form-label.header__form-label-check Check-in — Check-out
            input.header__form-input.header__form-input--date(type="date" name="date")
          .header__form-wrap.header__form-wrap--quantity
            input.header__form-input.header__form-input--quantity(type="text" value="2 Adults — 0 Children — 1 Room" name="quantity")
          .header__form-wrap.header__form-wrap--btn
            button.header__form-input.header__form-input--btn(type="submit") Search
        //- For mobile phones
        .header__form-mobile
          .header__form-mobile-city
            .header__form-mobile-wrap
              img.header__form-mobile-search-ico(src="img/input-search.svg" alt="Search")
              input.header__form-mobile-input.header__form-mobile-input--city(name="city", placeholder="Your destination or hotel name")
            .header__form-mobile-wrap
              .header__form-mobile-checkin.col-s-6.col-m-6
                label.header__form-mobile-label Check-in
                input.header__form-mobile-input.header__form-mobile-input--date(type="date", name="date")
              .header__form-mobile-checkin.col-s-6.col-m-6
                label.header__form-mobile-label Check-out
                input.header__form-mobile-input.header__form-mobile-input--date(type="date", name="date")
            .header__form-mobile-wrap
              .header__form-mobile-adults.col-s-4.col-m-4
                label.header__form-mobile-label Adults
                input.header__form-mobile-input.header__form-mobile-input--adults(type="text", name="quantity-adults" value="2")
              .header__form-mobile-children.col-s-4.col-m-4
                label.header__form-mobile-label Children
                input.header__form-mobile-input.header__form-mobile-input--children(type="text", name="quantity-children" value="0")
              .header__form-mobile-rooms.col-s-4.col-m-4
                label.header__form-mobile-label Rooms
                input.header__form-mobile-input.header__form-mobile-input--rooms(type="text", name="quantity-rooms" value="1")
            .header__form-mobile-wrap
              button.header__form-mobile-input.header__form-mobile-input--btn(type="submit") Search
        .header__apps
          each value in {'Google' : 'googleplay', 'Apple' : 'appstore'}
            a.header__apps-item(href="#")
              img(src=images + value + ".svg")